{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "",
    "Redis": "",
    "RabbitMq": ""
  },
  "Jwt": {
    "Secret": "",
    "Issuer": "ExoAuth",
    "Audience": "ExoAuth",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 30
  },
  "Email": {
    "Provider": "SMTP",
    "SmtpHost": "smtp.example.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "SmtpUseSsl": true,
    "FromEmail": "noreply@exoauth.com",
    "FromName": "ExoAuth"
  },
  "SystemInvite": {
    "ExpirationHours": 24,
    "BaseUrl": "http://localhost:5173"
  },
  "Password": {
    "MinLength": 12,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialChar": true
  },
  "BruteForce": {
    "MaxAttempts": 10,
    "LockoutMinutes": 60
  },
  "Lockout": {
    "ProgressiveDelays": [0, 0, 60, 120, 300, 600, 900, 1800, 3600],
    "NotifyAfterSeconds": 900
  },
  "Cache": {
    "PermissionCacheTtlMinutes": 60
  },
  "RateLimiting": {
    "DefaultRequestsPerMinute": 100
  },
  "Cookies": {
    "Secure": true
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:5173"]
  },
  "InviteCleanup": {
    "Enabled": true,
    "RetentionDays": 30,
    "RunIntervalHours": 24
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
