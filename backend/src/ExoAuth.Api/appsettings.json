{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "",
    "Redis": "",
    "RabbitMq": ""
  },
  "Jwt": {
    "Secret": "",
    "Issuer": "ExoAuth",
    "Audience": "ExoAuth",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7,
    "RememberMeExpirationDays": 30
  },
  "Email": {
    "Provider": "SMTP",
    "SmtpHost": "smtp.example.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "SmtpUseSsl": true,
    "FromEmail": "noreply@exoauth.com",
    "FromName": "ExoAuth"
  },
  "SystemInvite": {
    "ExpirationHours": 24,
    "BaseUrl": "http://localhost:5173"
  },
  "Password": {
    "MinLength": 12,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialChar": true
  },
  "BruteForce": {
    "MaxAttempts": 10,
    "LockoutMinutes": 60
  },
  "Lockout": {
    "ProgressiveDelays": [0, 0, 60, 120, 300, 600, 900, 1800, 3600],
    "NotifyAfterSeconds": 900
  },
  "Cache": {
    "PermissionCacheTtlMinutes": 60
  },
  "RateLimiting": {
    "DefaultRequestsPerMinute": 100
  },
  "Cookies": {
    "Secure": true
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:5173"]
  },
  "InviteCleanup": {
    "Enabled": true,
    "RetentionDays": 30,
    "RunIntervalHours": 24
  },
  "Fido2": {
    "ServerDomain": "localhost",
    "ServerName": "ExoAuth",
    "Origins": ["http://localhost:5173", "https://localhost:5173"],
    "TimestampDriftTolerance": 300000
  },
  "Captcha": {
    "Enabled": true,
    "Provider": "Turnstile",
    "Turnstile": {
      "SiteKey": "",
      "SecretKey": ""
    },
    "Recaptcha": {
      "SiteKey": "",
      "SecretKey": "",
      "MinScore": 0.5
    },
    "HCaptcha": {
      "SiteKey": "",
      "SecretKey": ""
    },
    "SmartTrigger": {
      "LoginFailedAttemptsThreshold": 2,
      "LoginRiskScoreThreshold": 70,
      "DeviceApprovalFailedAttemptsThreshold": 2,
      "MfaVerifyFailedAttemptsThreshold": 2
    }
  },
  "DeviceTrust": {
    "Enabled": true,
    "Thresholds": {
      "Medium": 31,
      "High": 61
    },
    "Scores": {
      "NewDevice": 20,
      "NewCountry": 40,
      "NewCity": 10,
      "ImpossibleTravel": 80,
      "VpnProxy": 30,
      "UnusualTime": 15,
      "TorExitNode": 50,
      "DifferentDeviceType": 10
    },
    "TrustedDeviceReduction": -30,
    "ImpossibleTravelSpeedKmh": 800,
    "ApprovalExpiryMinutes": 30,
    "MaxCodeAttempts": 3,
    "PatternHistoryDays": 90
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
